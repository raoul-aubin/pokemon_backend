<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">

    <persistence-unit name="pokemonPU" transaction-type="JTA">

        <jta-data-source>jdbc/pokemonDS</jta-data-source>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="create"/>
        </properties>

    </persistence-unit>
</persistence>
